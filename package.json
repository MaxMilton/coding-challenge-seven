  "workspaces": [
    "1-react-simple",
    "2-react-fancy",
    "3-preact",
    "4-vue",
    "5-svelte",
    "6-vanilla-js-web-component"
  ],
  "scripts": {
    "setup": "yarn clean; shx rm -rf ./node_modules/; yarn; lerna bootstrap",
    "update": "yarn upgrade-interactive --latest",
    "build": "lerna run build",
    "prebuild": "shx rm -rf ./docs && shx mkdir ./docs && shx cp -r ./static/* ./docs",
    "clean": "lerna clean --yes",
    "lint:css": "stylelint **/*.{html,css} --cache",
    "lint:js": "eslint --ignore-path .gitignore --ignore-pattern docs --ext .js,.jsx,.vue,.html .",
    "lint": "yarn lint:css && yarn lint:js",
    "test": "yarn lint && jest --coverage",
    "test-ci": "jest --runInBand --ci --verbose --coverage"
  },
  "devDependencies": {
    "@babel/core": "7.0.0-beta.53",
    "@babel/plugin-transform-modules-commonjs": "7.0.0-beta.53",
    "@minna-ui/eslint-config": "0.7.0",
    "@minna-ui/jest-config": "0.7.0",
    "@minna-ui/stylelint-config": "0.7.1",
    "@types/jest": "23.1.5",
    "@types/prop-types": "15.5.3",
    "@types/react": "16.4.6",
    "@types/react-dom": "16.0.6",
    "@types/react-test-renderer": "16.0.1",
    "@vue/test-utils": "1.0.0-beta.20",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "23.4.0",
    "babel-jest-nested": "23.2.0",
