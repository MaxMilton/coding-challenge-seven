    "eslint-plugin-import": "2.13.0",
    "eslint-plugin-jsx-a11y": "6.1.0",
    "eslint-plugin-react": "7.10.0",
    "jest": "23.4.1",
    "jest-serializer-vue": "2.0.2",
    "lerna": "3.0.0-beta.21",
    "react-test-renderer": "16.4.1",
    "shx": "0.3.2",
    "stylelint": "9.3.0",
    "vue-jest": "2.6.0",
    "vue-server-renderer": "2.5.16"
  }
